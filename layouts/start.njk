{% extends "index.njk" %}

{% block headextras %}
<link rel="stylesheet" type="text/css" href="assets/style/style.css" />
{% endblock %}

{% block maincontent %}
    <div class="row g-3">
      <div class="col-12 col-md-4 mb-3">
        <div style="position: sticky; top: 15px;">
          <div class="card mb-3">
            <img src="assets/img/me.jpg" class="card-img-top" alt="Believe it or not it's just me">
            <div class="card-body">
              <h5 class="card-title">About me</h5>
              <p class="card-text">
              <div class="mt-3">
              {{ contents | safe }}

              </div>
              </p>
            </div>
          </div>
          <div class="skills-pod">
            <span>Node.js</span>
            <span>PHP</span>
            <span>Typescript/Javascript</span>
            <span>Go</span>
            <span>Vue</span>
            <span>React</span>
            <span>Angular</span>
            <span>Next</span>
            <span>Nuxt</span>
            <span>Nest</span>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-8" id="articles">
        {% for post in collections.posts %}
          <div class="card mb-3">
            <div class="p-3 d-flex align-items-center">
              <div class="profile-pic small me-3"></div>
              <div>
                <div class="fw-bold">Richard Ross</div>
                <div class="small text-secondary">
                  {{post.when}}
                </div>
              </div>
            </div>
            <div class="card-body">
              <h5 class="card-title"><a class="text-decoration-none text-dark" href="{{post.path}}">{{post.title}}</a></h5>
              <p class="card-text">{{post.body | safe}}</p>
            </div>
            {% if post.image %}
            <img src="{{post.image}}" class="card-img-bottom" alt="post image">
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}